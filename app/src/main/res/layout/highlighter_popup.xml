<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="#EFEFEF"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widthKor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="@string/width"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/widthTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5px"
            android:textColor="#000000" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/penWidthSeekbar"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:progressDrawable="@drawable/seekbar_barstyle"
        android:splitTrack="false"
        android:thumb="@drawable/seekbar_circlestyle"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/transparencyKor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="@string/transparency"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/transparencyTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="10%"
            android:textColor="#000000" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/transparencySeekbar"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:progressDrawable="@drawable/seekbar_barstyle"
        android:splitTrack="false"
        android:thumb="@drawable/seekbar_circlestyle" />

</LinearLayout>